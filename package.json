{
  "name": "email-sender-service",
  "version": "1.0.0",
  "description": "email-sender-service server",
  "main": "src/index.js",
  "author": "Javier Palacios <javier.palacios@cision.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start:dev": "NODE_ENV=development nodemon --exec babel-node src/index.js",
    "start:prod": "yarn run pm2",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf build && mkdir build",
    "build-babel": "babel -d ./build ./src -s --copy-files",
    "build": "yarn clean && yarn build-babel",
    "start": "yarn build && node ./build/index.js",
    "pm2": "pm2 start processes.json --no-daemon",
    "start:docker": "docker-compose up",
    "start:docker:build": "docker-compose up --build"
  },
  "engines": {
    "node": ">=12.16.1"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "email-templates": "^7.1.1",
    "express": "^4.17.1",
    "nodemailer": "^6.4.11",
    "pm2": "^4.5.0",
    "regenerator-runtime": "^0.13.7"
  },
  "devDependencies": {
    "babel": "6.23.0",
    "babel-cli": "6.26.0",
    "babel-preset-env": "1.6.0",
    "eslint": "^7.9.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2"
  }
}
